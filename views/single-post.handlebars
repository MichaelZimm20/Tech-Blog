<article class="post">
      <div class="title">
        <a href="/post/{{post.id}}" target="_blank">{{post.title}}</a> 
        <span class="justify">(Posted by {{post.user.username}} on {{post.created_at}})</span>
      
      </div>
      <div class="meta">
        {{post.posted_note}}
        <a href="/post/{{post.id}}" class="justifyComment">{{post.comments.length}} comment(s)</a>
      </div>
    </article>

    {{!-- form for comments --}}
    {{#if loggedIn}}
      <form class="comment-form">
        <div>
            <textarea name="comment-body"></textarea>    
        </div>

        <div>
            <button class="btn btn-outline-warning" type="submit">add comment</button>
        </div>
      </form>
    {{/if}}

    {{!-- current created comments --}}
    <div class="comments">
        {{#each post.comments}}
        <section class="comment">
            <div class="meta">
                {{user.username}} on {{created_at}}
            </div>
            <div class="text">
                {{comment_text}}
            </div>
        </section>
        {{/each}}
    </div> 


<script src="/javascript/comment.js"></script>